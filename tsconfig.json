{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "ES2018",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "./src/**/*",
        "index.ts"
    ],
    "exclude": [
        "./src/**/*.test.ts",
        "node_modules"
    ]
}